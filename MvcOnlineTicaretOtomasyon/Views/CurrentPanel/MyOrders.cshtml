@using MvcOnlineTicaretOtomasyon.Models.Classes
@model List<SalesMovement>
@{
    ViewBag.Title = "MyOrders";
    Layout = "~/Views/Shared/_CurrentLayout.cshtml";
}
<br />
<h2>Sipariş Geçmişim</h2>
<br />
<table class="table table-hover">
    <tr>
        <th>Ürün Adı</th>
        <th>Tarih</th>
        <th>Adet</th>
        <th>Fiyat</th>
        <th>Toplam Fiyat</th>
    </tr>
    @foreach (var item in Model)
     {
        <tr>
            <td>@item.Product.ProductName</td>
            <td>@Convert.ToDateTime(item.Date).ToString("dd.MM.yyyy")</td>
            <td>@item.Quantity</td>
            <td>@item.Price</td>
            <td>@item.TotalPrice</td>
        </tr>
     }
    <tr>
        <td></td>
    </tr>
</table>
