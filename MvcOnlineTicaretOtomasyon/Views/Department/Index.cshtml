@using MvcOnlineTicaretOtomasyon.Models.Classes
@model List<Department>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Departman Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var item in Model)
    {

        <tr>
            <td>
                @item.DepartmentId
            </td>
            <td>
                @item.DepartmentName
            </td>
            <td><a href="/Department/DeleteDepartment/@item.DepartmentId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Department/GetDepartment/@item.DepartmentId" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Department/DetailDepartment/@item.DepartmentId" class="btn btn-default" style="background-color:cadetblue; color:white">Detay</a></td>
        </tr>
    }

</table>
<a href="/Department/CreateDepartment" class="btn btn-info">Departman Ekle</a>

