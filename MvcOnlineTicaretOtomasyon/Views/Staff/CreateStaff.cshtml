@model MvcOnlineTicaretOtomasyon.Models.Classes.Staff
@{
    ViewBag.Title = "CreateStaff";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Yeni Personel Sayfası</h2>
<br />
@using (Html.BeginForm("CreateStaff", "Staff", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
<form class="form-group" method="post">    
    @Html.LabelFor(x => x.StaffName)
    @Html.TextBoxFor(x => x.StaffName, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.StaffSurName)
    @Html.TextBoxFor(x => x.StaffSurName, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.StaffImage)
    @*@Html.TextBoxFor(x => x.StaffImage, new { @class = "form-control" })*@
    <input type="file" name="StaffImage" class="form-control"/>
    <br />
    @Html.LabelFor(x => x.Department)
    @Html.DropDownListFor(x => x.DepartmentId, (List<SelectListItem>)ViewBag.p, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">Kaydet</button>
</form>
}
