@model MvcOnlineTicaretOtomasyon.Models.Classes.Category
@{
    ViewBag.Title = "CreateCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script src="~/Scripts/jquery-3.7.0.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<br />
<h2>Yeni Kategori Sayfası</h2>
<br />
<form class="form-group" method="post">
    @Html.LabelFor(x => x.CategoryName)
    @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
    <br />
    <button type="button" class="btn btn-info" id="btn1">Kaydet</button>

</form>
<script>
    $('#btn1').click(function () {
        Swal.fire({
            title: 'Bu Kategoriyi Eklemek İstiyor musunuz?',
            showDenyButton: true,
            showCancelButton: true,
            confirmButtonText: 'Kaydet',
            denyButtonText: 'Vazgeç'
        }).then((result) => {
            if (result.isConfirmed) {
                $('#createForm').submit();
                Swal.fire('Eklendi!', 'Kategori Başarıyla Eklendi', 'success');
            } else if (result.isDenied) {
                Swal.fire('Vazgeçildi!', 'Kategori Eklenmedi', 'error');
            }
        });
    });
</script>