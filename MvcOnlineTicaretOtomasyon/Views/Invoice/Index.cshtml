@using MvcOnlineTicaretOtomasyon.Models.Classes
@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<Invoice>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<table class="table table-bordered">
    <tr>
        <th>Seri Sıra No</th>
        <th>Vergi Dairesi</th>
        <th>Tarih</th>
        <th>Saat</th>
        <th>Teslim Eden</th>
        <th>Teslim Alan</th>
        <th>Toplam</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
        <th>Yeni Kalem</th>
    </tr>
    @foreach (var item in Model)
    {

        <tr>
            <td>@item.InvoiceSerialNumber @item.InvoicesEquence</td>
            <td>@item.TaxOffice</td>
            <td>@item.Date.ToShortDateString()</td>
            <td>@item.Hour</td>
            <td>@item.Receiver</td>
            <td>@item.Delivered</td>
            <td>@item.Total ₺</td>
            <td><a href="/Invoice/GetInvoice/@item.InvoiceId" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Invoice/InvoiceDetail/@item.InvoiceId" class="btn btn-default" style="background-color:cadetblue; color:white">Detay</a></td>
            <td><a href="/Invoice/CreatePen/@item.InvoiceId" class="btn btn-default" style="background-color:darkred; color:white">Kalem</a></td>
        </tr>
    }

</table>
@Html.PagedListPager((IPagedList)Model, page3 => Url.Action("Index", new { page3 }), new PagedListRenderOptions 
{
     LiElementClasses= new List<string>
     {"page-link" }
})
<a href="/Invoice/CreateInvoice" class="btn btn-info">Yeni Fatura Girişi</a>
<br />
<br />
<button type="button" class="btn btn-default" style="background-color:darkred; color:white" data-toggle="modal" data-target="#Modal1">Popup Penceresi</button>

<div class="modal" id="Modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-dialog">Popup Diyalog Ekranı</h2>
            </div>
            <div class="modal-body">
                <table class="table table-hover">
                    <tr>
                        <td>Seri No</td>
                        <td>Sıra No</td>
                        <td>Tutar</td>
                    </tr>
                    @foreach(var item in Model) 
                    {
                        <tr>
                            <td>@item.InvoiceSerialNumber</td>
                            <td>@item.InvoicesEquence</td>
                            <td>@item.Total ₺</td>
                        </tr>
                    }
                </table>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Kapat</button>
            </div>
        </div>
    </div>
</div>