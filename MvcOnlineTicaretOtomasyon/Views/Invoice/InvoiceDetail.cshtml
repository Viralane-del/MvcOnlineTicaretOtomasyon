@using MvcOnlineTicaretOtomasyon.Models.Classes
@model  List<InvoicePen>
@{
    ViewBag.Title = "InvoiceDetail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Fatura Kalemleri  Sayfası</h2>
<br />

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active"></li>
</ol>
<table class="table table-hover">
    <tr>
        <th>Açıklama</th>
        <th>Miktar</th>
        <th>Birim Fiyat</th>
        <th>Tutar</th>
    </tr>
    @foreach (var item in Model)
     {
        <tr>
            <td>@item.Description</td>
            <td>@item.Quantity</td>
            <td>@item.UnitPrice ₺</td>
            <td>@item.Amount ₺</td>            
        </tr>

     }

</table>
<a href="/Invoice/CreatePen/" class="btn btn-default" style="background-color:coral">Yeni Kalem Girişi</a>


