
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>

@{
    var chart = new Chart(width: 500, height: 500);
    chart.AddTitle(text:"Kategori - Ürün Sayıları");
    chart.AddLegend(title: "Değerler");

    chart.AddSeries(
        name: "Veriler",
        chartType: "Pie",
        xValue: new[] { "Beyaz Eşya", "Telefon", "Küçük Ev Aleti", "Bilgisayar"},
        yValues: new[] { 500, 250, 340, 620}
        );
    chart.Write();
 }